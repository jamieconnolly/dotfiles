[alias]
	a        = add
	amend    = commit --amend -C HEAD
	br       = branch
	branches = branch -a --color -v
	changes  = diff --name-status -r
	co       = checkout
	d        = diff
	hash     = rev-parse --short HEAD
	in       = incoming
	irb      = rebase --interactive
	out      = outgoing
	pick     = cherry-pick
	ready    = rebase -i @{u}
	st       = status -sb
	staged   = diff --cached
	undo     = reset --soft HEAD^
	unstage  = reset HEAD
	unstaged = diff
	unstash  = stash pop

[color]
	branch = auto
	diff   = auto
	status = auto
	ui     = true

[core]
	editor = vim

[credential]
	helper = git-credential-osxkeychain

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true

[hub]
	protocol = https

[push]
	default = simple

[user]
	name = Jamie Connolly
	email = jamie@jamieconnolly.com
